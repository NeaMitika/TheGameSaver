{
	"name": "gamesaver",
	"author": "Luciano M.",
	"version": "0.0.3",
	"private": true,
	"description": "Portable USB tool to automatically backup and restore your PC game saves",
	"main": "dist/main/main.js",
	"scripts": {
		"dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
		"dev:renderer": "vite --config vite.renderer.config.ts",
		"dev:main": "tsc -p tsconfig.electron.json --watch",
		"dev:electron": "wait-on http://localhost:5175 dist/main/main.js && node scripts/run-electron-dev.js",
		"build": "npm run build:renderer && npm run build:electron",
		"build:renderer": "vite build --config vite.renderer.config.ts",
		"build:electron": "tsc -p tsconfig.electron.json",
		"pack": "npm run build && electron-builder --dir",
		"dist": "npm run build && electron-builder",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "eslint \"src/**/*.{ts,tsx}\"",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"chokidar": "^3.6.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.563.0",
		"next-themes": "^0.4.6",
		"ps-list": "^8.1.1",
		"radix-ui": "^1.4.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.0",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^8.26.0",
		"@typescript-eslint/parser": "^8.26.0",
		"@vitejs/plugin-react": "^5.1.3",
		"concurrently": "^9.2.1",
		"electron": "^40.1.0",
		"electron-builder": "^26.7.0",
		"eslint": "^8.57.1",
		"typescript": "^5.3.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"wait-on": "^7.2.0"
	},
	"build": {
		"appId": "com.luciano.gamesaver",
		"productName": "GameSaver",
		"files": [
			"dist/main/**/*",
			"dist/preload/**/*",
			"dist/renderer/**/*",
			"dist/shared/**/*",
			"package.json"
		],
		"directories": {
			"buildResources": "build"
		},
		"extraResources": [
			{
				"from": "data",
				"to": "data"
			},
			{
				"from": "build/icon.ico",
				"to": "icon.ico"
			},
			{
				"from": "build/icon.png",
				"to": "icon.png"
			}
		],
		"win": {
			"target": "nsis",
			"icon": "build/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"publish": [
			{
				"provider": "github",
				"owner": "NeaMitika",
				"repo": "GameSaver",
				"releaseType": "release"
			}
		]
	}
}
